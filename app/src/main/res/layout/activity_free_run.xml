<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="minion.autodrive.FreeRunActivity">

    <TextView
        android:id="@+id/speed"
        android:layout_width="100pt"
        android:layout_height="30pt"
        android:textSize="25dp"
        android:text="@string/label_speed"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/speed"
        />


    <Button
        android:textAllCaps="false"
        android:id="@+id/monitor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@+id/car_start"
        android:text="@string/button_monitor"
        android:layout_marginBottom="30dp"
        android:onClick="openMonitor"/>

    <!--Button for Free Run mode -->

    <ImageButton
        android:id="@+id/car_start"
        android:contentDescription="@string/button_start"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="30dp"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_below="@+id/speed"
        android:layout_alignParentLeft="true"
        android:src="@drawable/start"
        android:background="#00000000"
        android:onClick="carStart"/>

    <ImageButton
        android:id="@+id/car_pause"
        android:contentDescription="@string/button_pause"
        android:scaleType="fitXY"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_below="@+id/speed"
        android:layout_centerInParent="true"
        android:src="@drawable/pause"
        android:background="#00000000"
        android:onClick="carPause"/>


    <ImageButton
        android:id="@+id/car_stop"
        android:contentDescription="@string/button_stop"
        android:scaleType="fitXY"
        android:layout_marginRight="10dp"
        android:layout_width="30pt"
        android:layout_height="30pt"
        android:layout_below="@+id/speed"
        android:layout_alignParentRight="true"
        android:src="@drawable/stop"
        android:background="#00000000"
        android:onClick="carStop"/>

</RelativeLayout>
